<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Nmea" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimaryDark</item>
        <!-- Customize your theme here. -->
    </style>

    // Textviews
    <style name="default_textview" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/futur</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Mega_title" parent="default_textview">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">100sp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>